<script>
	
var process = '';

function pdftohtml(fileno,filename) {
		let submit_args = '';
			submit_args += commonFunc.makeArgs("fileno", fileno);
			submit_args += commonFunc.makeArgs("filename", filename);
			const ret = commonFunc.postArgs("/pdftohtml", submit_args);
	}
	
function pop_cad_add_select(no) {
		all_no = no;
		let arr = [];
		let submit_args = '';
			submit_args += commonFunc.makeArgs("no", no);
			const ret = commonFunc.postArgs("/pop_cad_add_select", submit_args);
			$('#customer_name').attr('value',ret.row[0].customer_name);
			$('#program_name').attr('value',ret.row[0].program_name);
			$('#no').attr('value',ret.row[0].no);
			$('#order_date').attr('value',ret.va_day);
			$('#order_date').attr('min',ret.va_day);
			$('#shipment_date').attr('min',ret.va_day);
			$('#arr_qty').attr('value',ret.row[0].arr_qty);
			$('#key_no').attr('value',ret.row[0].key_no);
			console.log(ret)
	}
	
function pop_add() {
		let submit_args = '';	
			submit_args += commonFunc.makeArgs("customer", $("#customer_name").val());
			submit_args += commonFunc.makeArgs("work_key", $("#no").val());
			submit_args += commonFunc.makeArgs("order_date", $("#order_date").val());
			submit_args += commonFunc.makeArgs("shipment_date", $("#shipment_date").val());
			submit_args += commonFunc.makeArgs("proc", process);
			submit_args += commonFunc.makeArgs("arr_qty", $("#arr_qty").val());	
			submit_args += commonFunc.makeArgs("work_no", $("#work_no").val());
			submit_args += commonFunc.makeArgs("key_no", $("#key_no").val());	
			var ret = commonFunc.postArgs("/cad_to_management_add", submit_args);
			if(ret == 'y'){
				alert('등록이 완료 되었습니다.');
				location.href='/cad';
			}
			else if(ret == 'n'){
				alert('발주일 보다 납기일이 빠릅니다. 확인 바랍니다.')
			}
			else if(ret == 'empty')
			{
				alert('납기일이 선택 되지 않았습니다.')	
			}
			else if(ret == 't_n'){
				alert('날짜 입력을 잘못 하셨습니다. 예시대로 입력 해주세요. \n 예시)03/02')
			}
			else if(ret == 'proc_empty')
			{
				alert('선택된 공정이 없습니다.')		
			}
}
		
	
function setClassName(index, process_details) {
	
	if(document.getElementById('process_name_'+index).classList == 'btn btn-sm btn-primary-off btn-add-ncr'){
	  	document.getElementById('process_name_'+index).className = 'btn btn-sm btn-primary btn-add-ncr';
		process += process_details
	 } else{
		 document.getElementById('process_name_'+index).className = 'btn btn-sm btn-primary-off btn-add-ncr';
		 var str = process_details;
		 process = process.replace(str, '')
	 }
	console.log(process)
		
}	

function close_func(){
	process = ''
	document.getElementById('process_name_0').className = 'btn btn-sm btn-primary-off btn-add-ncr';
	document.getElementById('process_name_1').className = 'btn btn-sm btn-primary-off btn-add-ncr';
	document.getElementById('process_name_2').className = 'btn btn-sm btn-primary-off btn-add-ncr';
	document.getElementById('process_name_3').className = 'btn btn-sm btn-primary-off btn-add-ncr';
}
	

	
document.getElementById('cad').style.background='khaki';
</script>